<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report 
            id="action_partner_statement"
            model="partner.statement.wizard"
            string="Partner Statement"
            report_type="qweb-pdf"
            name="carbotecnia_partner_statement.partner_statement_report_template"
            file="carbotecnia_partner_statement.partner_statement_report_template"
            />
        <template id="partner_statement_report_template_translate">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'carbotecnia_partner_statement.partner_statement_report_template')"/>
                </t>
            </t>
        </template>
        <record id="status_paperformat" model="report.paperformat">
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="header_spacing">35</field>
            <field name="margin_top">10</field>
            <field name="margin_right">7</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field eval="True" name="header_line"/>
            <field name="name">US Letter Status</field>
            <field name="orientation">Portrait</field>
            <field name="dpi">90</field>
            <field eval="True" name="default"/>
            <field name="format">Letter</field>
        </record>
        <record id="carbotecnia_partner_statement.action_partner_statement" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="status_paperformat"/>
        </record>
    </data>
</odoo>
