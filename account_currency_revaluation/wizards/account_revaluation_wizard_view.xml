<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record model='ir.ui.view' id='view_account_revaluation_wizard_form'>
        <field name='name'>view.account.revaluation.wizard.form</field>
        <field name='model'>account.revaluation.wizard</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <h2>Please Select the Cutoff Date</h2>
                    <group>
                        <field name='cutoff_date'/>
                    </group>
                </sheet>
                <footer>
                    <button class="oe_highlight" name="run_revaluation" string="Run Revaluation" type="object"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_account_revaluation_wizard" model="ir.actions.act_window">
        <field name="name">Accounting Revaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.revaluation.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="account_reports_txt_menu" name="Account Revaluation" action="action_account_revaluation_wizard" parent="account.menu_finance_entries" sequence="99"/>
</odoo>
